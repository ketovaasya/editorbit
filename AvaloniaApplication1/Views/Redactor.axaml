<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaApplication1.Redactor">
	<ScrollViewer x:Name="ScrollContainer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
		<Canvas x:Name="ImageCanvas">
			<Image x:Name="ImageChu" Stretch="Uniform" RenderTransformOrigin="0.5,0.5"/>
			<Rectangle x:Name="CropSelection" Stroke="Red" StrokeThickness="2" Fill="Transparent" IsVisible="False"/>
		</Canvas>
	</ScrollViewer>
</UserControl>

